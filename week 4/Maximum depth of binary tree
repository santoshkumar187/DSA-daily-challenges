/*
Given the root of a binary tree, return its maximum depth.

The maximum depth is the number of nodes along the longest path from the root down to the farthest leaf.


*/


/*
function maxDepth(node):
    if node == null:
        return 0
    return 1 + max(maxDepth(node.left), maxDepth(node.right))



*/


class TreeNode {
    int val;
    TreeNode left, right;
    TreeNode(int val) { this.val = val; }
}

class Solution {
    public int maxDepth(TreeNode root) {
        if (root == null) return 0;
        return 1 + Math.max(maxDepth(root.left), maxDepth(root.right));
    }
}


/*
Given the root of a binary tree, return its maximum depth.

The maximum depth is the number of nodes along the longest path
from the root down to the farthest leaf.
*/

/*
function maxDepth(node):
    if node == null:
        return 0
    return 1 + max(maxDepth(node.left), maxDepth(node.right))
*/

import java.util.*;

// Node structure for the binary tree
class TreeNode {
    int val;
    TreeNode left, right;

    TreeNode(int val) {
        this.val = val;
    }
}

public class Main {

    // Recursive function to find maximum depth
    public static int maxDepth(TreeNode root) {
        if (root == null)
            return 0;
        return 1 + Math.max(maxDepth(root.left), maxDepth(root.right));
    }

    // Helper function to build the tree from level-order input
    public static TreeNode buildTree(Integer[] values) {
        if (values.length == 0 || values[0] == null)
            return null;

        TreeNode root = new TreeNode(values[0]);
        Queue<TreeNode> queue = new LinkedList<>();
        queue.add(root);
        int i = 1;

        while (i < values.length) {
            TreeNode current = queue.poll();
            if (current == null) continue;

            // Left child
            if (i < values.length && values[i] != null) {
                current.left = new TreeNode(values[i]);
                queue.add(current.left);
            }
            i++;

            // Right child
            if (i < values.length && values[i] != null) {
                current.right = new TreeNode(values[i]);
                queue.add(current.right);
            }
            i++;
        }
        return root;
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.println("Enter number of nodes in level order (use -1 for null):");
        int n = sc.nextInt();
        Integer[] arr = new Integer[n];

        System.out.println("Enter node values:");
        for (int i = 0; i < n; i++) {
            int val = sc.nextInt();
            arr[i] = (val == -1) ? null : val;
        }

        TreeNode root = buildTree(arr);
        int depth = maxDepth(root);

        System.out.println("Maximum Depth of the Binary Tree: " + depth);
    }
}


ouput
Enter number of nodes in level order (use -1 for null):
4
Enter node values:
1 4 6 4 
Maximum Depth of the Binary Tree: 3

=== Code Execution Successful ===
